<%= form_for (@group) do |f| %>
  <div class="form-group">
    <div class="form-group col-sm-12">
      <%= f.label :title %>
    </div>
    <div class=col-sm-4>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>
    
    <div class="form-group col-sm-12">
      <%= f.label :description %>
    </div>
    <div class=col-sm-4>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
    <div>
      <%= f.submit t(:create_group), class: "btn btn-primary" %>
    </div>

<% end %>
