<h1>Редактирование группы</h1>

<%= form_for (@group) do |f| %>
  <div class="form-group col-sm-12">
    <div class="col-sm-2">
      <%= f.label :title %>
    </div>
    <div class="col-sm-12">
      <div class="col-sm-4">
        <%= f.text_field :title, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group col-sm-12">
    <div class="col-sm-2">
      <%= f.label :description %>
    </div>
    <div class="col-sm-12">
      <div class="col-sm-4">
        <%= f.text_area :description, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="col-sm-12 form-group">
    <div class="col-sm-4">
      <%= f.submit t(:save), class: "btn btn-primary" %>
    </div>
  </div>
  
    
<% end %>
<div class="col-sm-12 form-group">
  <div class="col-sm-4">
    <%= link_to 'Удалить группу', @group, method: :delete, class: 'btn btn-danger' %>
  </div>
</div>
