<h1>Редактирование группы</h1>

<%= form_for (@group) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
      <%= f.submit t(:save), class: "ui blue labeled submit icon button" %>
  </div>
  <div>
    
  </div>
<% end %>

<%= link_to 'Удалить группу', @group, method: :delete %>
