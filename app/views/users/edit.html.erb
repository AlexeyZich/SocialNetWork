<h1>Редактирование страницы</h1>


<% if @user.errors.present? %>
  У юзера есть ошибки:<br>
  <% @user.errors.full_messages.each do |m| %> 
    <%= m %><br>
  <% end %>
<% end %>
<div class="form-horizontal">
  <%= form_for(@user) do |f| %>
    <div class="form-group">
      <%= f.label :name, class: "col-sm-2" %>
      <div class="col-sm-10">
        <div class="col-sm-4">
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :surname, class: "col-sm-2" %>
      <div class="col-sm-10">
        <div class="col-sm-4">
          <%= f.text_field :surname, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :age, class: "col-sm-2" %>
      <div class="col-sm-10">
        <div class="col-sm-4">
          <%= f.number_field :age, in: 1..100, step: 1, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :male, class: "col-sm-2" %>
      <div class="col-sm-10">
        <div class="col-sm-4">
          <%= f.select :male, options_for_select(User::MALE_SET, (@user.male.nil? ? 'nil' : (@user.male ? 1 : 0)) ), class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :country, class: "col-sm-2" %>
      <div class="col-sm-10">
        <div class="col-sm-4">
          <%= f.text_field :country, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :city, class: "col-sm-2" %>
      <div class="col-sm-10">
        <div class="col-sm-4">
          <%= f.text_field :city, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, class: "col-sm-2" %>
      <div class="col-sm-10">
        <div class="col-sm-4">
          <%= f.text_area :description, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :avatar, class: "col-sm-2"%>
      <div class="col-sm-10">
    <%= image_tag @user.avatar.url(:thumb) %></br>
    <%= f.file_field :avatar %>
      </div>
    </div>


    <div class="actions">
      <%= f.submit "Отправить", class: 'btn btn-success' %>
      <%= link_to "Назад", user_path(@user) %>
    </div>
  <% end %>
</div>
